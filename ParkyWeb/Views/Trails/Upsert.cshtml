
@model ParkyWeb.Models.VM.TrailsVM
<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite border">
        @{
            var title = "Edit Trail";
            if (Model.Trail.Id == 0)
            {
                title = "Create Trail";
            }
            else
            {
                <input type="hidden" asp-for="Trail.Id" />
            }
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-offset-1 col-10">
            <div class="form-group row">
                <div class="col-4">
                    National Park:
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Trail.NationalParkId, Model.NationalParkList, "-Please select a park-", new { @class = "form-control" })
                    <span asp-validation-for="Trail.NationalParkId" class="text-danger" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Name"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Trail.Name" class="form-control" />
                    <span asp-validation-for="Trail.Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Difficulty"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Trail.Difficulty"
                            asp-items="Html.GetEnumSelectList<Trail.DifficultyType>()"
                            class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Distance"></label>
                </div>
                <div class="col-6">
                    <input type="number" asp-for="Trail.Distance" class="form-control" />
                    <span asp-validation-for="Trail.Distance" class="text-danger" />
                </div>
                <div class="col-2">
                    <span class="text-dark">KM</span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Elevation"></label>
                </div>
                <div class="col-6">
                    <input type="number" asp-for="Trail.Elevation" class="form-control" />
                    <span asp-validation-for="Trail.Elevation" class="text-danger" />
                </div>
                <div class="col-2">
                    <span class="text-dark">M</span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Trail.Id != 0 ? "Update" : "Create")
                    </button>
                </div>
                <div class="col-4">
                    <a class="btn btn-success form-control" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</form>

